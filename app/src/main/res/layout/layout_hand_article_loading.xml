<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linear_loading_gif"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#66000000"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:gravity="center"
    android:orientation="vertical"
    android:visibility="gone">

    <RelativeLayout
        android:id="@+id/frame_loading_gif"
        android:layout_width="136dp"
        android:layout_height="68dp"
        android:gravity="center">

        <TextView
            android:id="@+id/text_loading_gif"
            android:layout_width="135dp"
            android:layout_height="65dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/text_loading_git_shape"
            android:gravity="center_horizontal"
            android:paddingTop="36dp"
            android:text="努力加载中···"
            android:textColor="#666666"
            android:textSize="14sp" />

        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/gif_imageview"
            android:layout_width="45dp"
            android:layout_height="17dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:layout_marginTop="12dp"
            android:clickable="false"
            android:gravity="center_horizontal" />

        <!--<com.facebook.drawee.view.SimpleDraweeView-->
        <!--android:id="@+id/image_content_loading"-->
        <!--android:layout_width="90dp"-->
        <!--android:layout_height="180dp"-->
        <!--android:layout_marginBottom="103dp"-->
        <!--android:src="@drawable/image_loading_light_gray"/>-->


    </RelativeLayout>

</LinearLayout>